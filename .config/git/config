[user]
	name = Ken Matsui
	email = 26405363+ken-matsui@users.noreply.github.com
	signingkey = 103360B3298EE433

[core]
	pager = delta
	autocrlf = input

[interactive]
	diffFilter = delta --color-only

[color]
	ui = true

[pull]
	rebase = false

[commit]
	gpgSign = true

[tag]
	forceSignAnnotated = true

[sequence]
	editor = interactive-rebase-tool

[init]
	defaultBranch = main

[alias]
	ch = checkout
	me = config --get-regexp user
	mylog = shortlog -sne --author='Ken Matsui'
	default-branch = !git symbolic-ref refs/remotes/origin/HEAD | sed 's@^refs/remotes/origin/@@'
	update = !git pull origin main && gh poi
	parent = "!f(){ git log --pretty=%P -n 1 $1;};f"
	create-one = !git reset $(git merge-base main $(git branch --show-current)) && git add -A && git commit
	squash-all = "!f(){ git reset $(git commit-tree HEAD^{tree} -m \"${1:-A new start}\");};f"
	rm-ignored = !git rm --cached $(git ls-files --full-name -i --exclude-standard)

[credential]
	helper = osxkeychain
